<div class="content">
    <h1>{{title}}</h1>

    <form method="post" action="/session/new">
        <table>
            <thead>
                <tr>
                    <th>Session ID</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each sessions}}
                <tr>
                    <td><a href="/session/{{session_id}}">{{session_id}}</a></td>
                    <td>{{status}}</td>
                    <td>{{#if payment}}<button onclick="location.href='/session/{{session_id}}/payment'" type="button">Payment</button>{{/if}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <br />
        <button type="submit">Create new session</button>
        <br />
        <br />
        <hr />
        <br />
        <table>
            <thead>
            <tr>
                <th>Order ID</th>
                <th>Status</th>
                <th>Order amount</th>
                <th>Captured amount</th>
                <th>Refunded amount</th>
            </tr>
            </thead>
            <tbody>
            {{#each orders}}
                <tr>
                    <td><a href="/order/{{order_id}}">{{order_id}}</a></td>
                    <td>{{status}}</td>
                    <td>{{order_amount}}</td>
                    <td>{{captured_amount}}</td>
                    <td>{{refunded_amount}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </form>
</div>
